#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
typedef struct{
	char nom[30];
	char ap[30];
	char am[30];
	int clave;
}TAlumno;

typedef struct {
	char materia[30];
	float P_uno;
	float P_dos;
	float p_tres;
	float CalFMat;
	float PFinal;	
}Materias;

void captura();
void captura_materia(int *N);

int main(){
	TAlumno A;
	Materias M;
	int N;
	
	captura();
	
	printf("Â¿Cuantas materias llevas?:\n");
	scanf("%i",&N);
	captura_materia(&N);
	
	getch();
	return 0;
}

void captura(){
	TAlumno A;
	printf("Dime tu nombre:\n");
	gets(A.nom);
	printf("Dame tu apellido paterno:\n");
	gets(A.ap);
	printf("Dame tu apellido materno:\n");
	gets(A.am);
	printf("Dame tu clave unica:\n");
	scanf("%i",&A.clave);
}

void captura_materia(int *N){
	int i;
	Materias M;
	
	for (i=0;i<=N;i++){
		printf("Dame el nombre de la materia:\n");
		gets(M.materia);
		printf("Dame tu calificacion en el periodo uno de la materia %s:\n",M.materia);
		scanf("%f",&M.P_uno);
		printf("Dame tu calificacion en el periodo dos de la materia %s:\n",M.materia);
		scanf("%f",&M.P_dos);
		printf("Dame tu calificacion en el periodo tres de la materia %s:\n",M.materia);
		scanf("%f",&M.p_tres);
	
	}
		M.CalFMat=(M.P_uno+M.P_dos+M.p_tres)/3;
		/*M.PFinal=*/
		

}
